defshell -zsh

screen -t tidal
select 0
stuff "emacs^M"
screen -t jackd
select 1
stuff "tail -f ~/jackd.log^M"
screen -t dirt
select 2
stuff "tail -f ~/dirt.log^M"
screen -t ffserver
select 3
stuff "tail -f ~/ffserver.log^M"
screen -t ffmpeg
select 4
stuff "tail -f ~/ffmpeg.log^M"
screen -t files
select 5
stuff "cd /work/scratchpool^M"
select 0

altscreen off
term screen-256color 
bind ',' prev
bind '.' next